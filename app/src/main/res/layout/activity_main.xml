<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="344dp"
        android:layout_height="31dp"
        android:fontFamily="@font/alata"
        android:text="By continuing I agree with Privacy Policy, Term &amp; Condition"
        android:textAlignment="center"
        android:textColor="#020202"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.858" />

    <androidx.cardview.widget.CardView
        android:layout_width="387dp"
        android:layout_height="60dp"
        android:layout_marginBottom="28dp"
        app:cardBackgroundColor="#2558D8"
        android:id="@+id/googlebtn"
        app:cardCornerRadius="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.568"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="23dp"
            android:paddingTop="12dp"
            app:srcCompat="@drawable/google" />

        <TextView
            android:layout_width="335dp"
            android:layout_height="75dp"
            android:layout_gravity="left|top|center"
            android:fontFamily="@font/doppio_one"
            android:paddingLeft="80dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="Continue with Google"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="329dp"
        android:layout_height="64dp"
        android:fontFamily="@font/alata"
        android:text="Log in to personalise your experience and track progress"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.245"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="342dp"
        android:layout_height="114dp"
        android:fontFamily="@font/doppio_one"
        android:shadowColor="#000000"
        android:text="Resolve all your mental Problems"
        android:textColor="#2979FF"
        android:textSize="38sp"
        android:textStyle="bold"
        android:paddingTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.28"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.55" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imageView11"
        android:layout_width="264dp"
        android:layout_height="315dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="26dp"
        android:paddingTop="18dp"
        android:paddingBottom="15dp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/fu" />




</androidx.constraintlayout.widget.ConstraintLayout>
